{
  "name": "ballup-backend",
  "version": "1.0.0",
  "description": "Real-time basketball pickup game platform API",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "seed": "ts-node src/scripts/seed.ts",
    "seed:sample": "node scripts/seed-sample-data.js",
    "test": "jest",
    "test:supabase": "node scripts/test-supabase.js",
    "validate:env": "node scripts/validate-env.js",
    "setup:supabase": "node scripts/setup-supabase-functions.js",
    "deploy": "npm run generate && npm run build",
    "postinstall": "npm run generate"
  },
  "keywords": [
    "basketball",
    "pickup",
    "games",
    "sports",
    "api",
    "real-time"
  ],
  "author": "BallUp Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@supabase/supabase-js": "^2.38.0",
    "@types/winston": "^2.4.4",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^6.9.7",
    "prisma": "^6.12.0",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
