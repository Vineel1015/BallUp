# BallUp Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001
WEB_DEMO_URL=http://localhost:8080

# Database Configuration (Supabase - FREE)
# Get these from: https://supabase.com/dashboard
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"
SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-make-it-long-and-random"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Email Configuration (Using Gmail - FREE)
# Enable 2-factor auth and generate app password: https://myaccount.google.com/apppasswords
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-gmail@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="BallUp <noreply@ballup.com>"

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication Rate Limiting (stricter)
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Modification Rate Limiting
MODIFY_RATE_LIMIT_WINDOW_MS=300000
MODIFY_RATE_LIMIT_MAX_REQUESTS=30

# Read Rate Limiting
READ_RATE_LIMIT_WINDOW_MS=60000
READ_RATE_LIMIT_MAX_REQUESTS=100

# Sensitive Operations Rate Limiting
SENSITIVE_RATE_LIMIT_WINDOW_MS=3600000
SENSITIVE_RATE_LIMIT_MAX_REQUESTS=3

# Upload Rate Limiting
UPLOAD_RATE_LIMIT_WINDOW_MS=3600000
UPLOAD_RATE_LIMIT_MAX_REQUESTS=10

# User-specific Rate Limiting
USER_GAME_RATE_LIMIT_WINDOW_MS=300000
USER_GAME_RATE_LIMIT_MAX_REQUESTS=20

USER_PROFILE_RATE_LIMIT_WINDOW_MS=3600000
USER_PROFILE_RATE_LIMIT_MAX_REQUESTS=5

# Feature Flags (set to 'false' to disable features)
ENABLE_SOCKET_IO=true
ENABLE_RATE_LIMITING=true
ENABLE_LOGGING=true
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# Real-time Configuration
SOCKET_CORS_ORIGIN="http://localhost:3001,http://localhost:8080"

# File Upload Configuration (Using local storage for free tier)
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES="image/jpeg,image/jpg,image/png,image/webp"

# Geolocation API (Optional - can use browser geolocation for free)
# Get free API key from: https://opencagedata.com/
GEOCODING_API_KEY="your-opencage-api-key"

# Push Notifications (Optional - Firebase FCM is free)
# Get from: https://console.firebase.google.com/
FCM_SERVER_KEY="your-fcm-server-key"

# Production Deployment URLs
# Railway: https://railway.app/ (FREE tier)
# Render: https://render.com/ (FREE tier)
# Vercel: https://vercel.com/ (FREE tier for serverless)
RAILWAY_PROJECT_ID="your-railway-project-id"
RENDER_SERVICE_ID="your-render-service-id"